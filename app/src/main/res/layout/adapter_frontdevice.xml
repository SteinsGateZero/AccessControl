<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/adp_frontDevice_img"
        android:layout_width="171dp"
        android:layout_height="128dp"
        android:scaleType="fitXY"
        android:src="@mipmap/pic_offline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/adp_frontDevice_offline_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textColor="#A1A1A1"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/adp_frontDevice_img"
        app:layout_constraintLeft_toLeftOf="@id/adp_frontDevice_img"
        app:layout_constraintRight_toRightOf="@id/adp_frontDevice_img"
        tools:text="离线时间:2018.09.01 12:09" />

    <TextView
        android:id="@+id/adp_frontDevice_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/front_device"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/adp_frontDevice_img"
        app:layout_constraintRight_toRightOf="@id/adp_frontDevice_img"
        app:layout_constraintTop_toBottomOf="@id/adp_frontDevice_img"
        tools:text="大门口摄像头" />
</android.support.constraint.ConstraintLayout>
