<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/adapter_fun_iv"
        android:layout_width="@dimen/main_function_list_img_width"
        app:layout_constraintVertical_bias="0.3"
        android:layout_height="@dimen/main_function_list_img_width"
        android:layout_marginStart="@dimen/main_function_list_img_left"
        android:src="@mipmap/icon_touxiang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adapter_fun_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/main_function_list_img_left"
        android:layout_marginStart="@dimen/main_function_list_text_right"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/main_title_color"
        android:textSize="@dimen/main_function_list_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/adapter_fun_time"
        app:layout_constraintLeft_toRightOf="@id/adapter_fun_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/adapter_fun_iv"
        tools:text="黎魏-研发部" />

    <TextView
        android:id="@+id/adapter_fun_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/main_fun_list_time"
        android:textSize="@dimen/main_function_list_smallText_size"
        app:layout_constraintBottom_toBottomOf="@id/adapter_fun_iv"
        app:layout_constraintLeft_toLeftOf="@id/adapter_fun_name"
        app:layout_constraintTop_toBottomOf="@id/adapter_fun_name"
        tools:text="2018.10.23 13:23:12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@id/adapter_fun_iv"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
