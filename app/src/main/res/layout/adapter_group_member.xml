<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/adp_member_img"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/icon_touxiang"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/adp_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:textColor="#656565"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/adp_member_img"
        app:layout_constraintRight_toRightOf="@id/adp_member_img"
        app:layout_constraintTop_toBottomOf="@id/adp_member_img"
        tools:text="张番佛佛" />

    <View
        android:id="@+id/adp_member_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_common"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>