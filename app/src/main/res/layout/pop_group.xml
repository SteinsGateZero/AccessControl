<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="142dp"
    android:layout_height="169dp">


    <View
        android:id="@+id/pop_bg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/pop_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/pop_right"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pop_bg_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@mipmap/icon_fold"
        app:layout_constraintBottom_toTopOf="@id/pop_bg"
        app:layout_constraintRight_toLeftOf="@id/pop_right" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/pop_bg_t"
        app:layout_constraintRight_toRightOf="@id/pop_bg_t"
        app:layout_constraintTop_toBottomOf="@id/pop_bg_t" />

    <ImageView
        android:id="@+id/pop_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@mipmap/icon_fc_add"
        app:layout_constraintBottom_toTopOf="@id/pop_line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/pop_tv_add"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pop_tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_group"
        android:textColor="#1f1f1f"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/pop_add"
        app:layout_constraintLeft_toRightOf="@id/pop_add"
        app:layout_constraintRight_toLeftOf="@id/pop_right"
        app:layout_constraintTop_toTopOf="@id/pop_add" />

    <View
        android:id="@+id/pop_line1"
        android:layout_width="0dp"
        android:layout_height="@dimen/line"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="13dp"
        android:background="@color/colorLine"
        app:layout_constraintBottom_toTopOf="@id/pop_person"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/pop_right"
        app:layout_constraintTop_toBottomOf="@id/pop_add" />

    <ImageView
        android:id="@+id/pop_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_fc_person"
        app:layout_constraintBottom_toTopOf="@id/pop_line2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/pop_tv_person"
        app:layout_constraintTop_toBottomOf="@id/pop_line1" />

    <TextView
        android:id="@+id/pop_tv_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_person"
        android:textColor="#1f1f1f"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/pop_person"
        app:layout_constraintLeft_toRightOf="@id/pop_person"
        app:layout_constraintRight_toLeftOf="@id/pop_right"
        app:layout_constraintTop_toTopOf="@id/pop_person" />

    <View
        android:id="@+id/pop_line2"
        android:layout_width="0dp"
        android:layout_height="@dimen/line"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="13dp"
        android:background="@color/colorLine"
        app:layout_constraintBottom_toTopOf="@id/pop_edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/pop_right"
        app:layout_constraintTop_toBottomOf="@id/pop_person" />


    <ImageView
        android:id="@+id/pop_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_fc_editor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/pop_tv_edit"
        app:layout_constraintTop_toBottomOf="@id/pop_line2" />

    <TextView
        android:id="@+id/pop_tv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_group"
        android:textColor="#1f1f1f"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/pop_edit"
        app:layout_constraintLeft_toRightOf="@id/pop_edit"
        app:layout_constraintRight_toLeftOf="@id/pop_right"
        app:layout_constraintTop_toTopOf="@id/pop_edit" />

    <View
        android:id="@+id/pop_right"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/pop_btn_create_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_common"
        app:layout_constraintBottom_toTopOf="@id/pop_line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/pop_right"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/pop_btn_create_person"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_common"
        app:layout_constraintBottom_toTopOf="@id/pop_line2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/pop_right"
        app:layout_constraintTop_toBottomOf="@id/pop_line1" />

    <View
        android:id="@+id/pop_btn_edit_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_common"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/pop_right"
        app:layout_constraintTop_toBottomOf="@id/pop_line2" />

</android.support.constraint.ConstraintLayout>